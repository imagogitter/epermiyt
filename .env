EMAIL_TO=you@example.com

# Optional: Use Addy HTTP API instead of SMTP. If ADDY_API_KEY is set the run_daily
# script will prefer Addy when USE_ADDY=true or ADDY_API_KEY is present.
# You can also override the API URL for private Addy-compatible endpoints.
ADDY_API_KEY=addy_io_LAFZozWy76ywxLoMIQpqZVhsp4fpFESn4zjbXrGi39d153f1
ADDY_API_URL=https://api.addy.io/v1/messages
USE_ADDY=YES

# Geocoding: by default the scraper will use Nominatim (OpenStreetMap). If you have a paid geocode provider, set GEOCODER_URL and GEOCODER_KEY
GEOCODER_URL=https://nominatim.openstreetmap.org/search
GEOCODER_EMAIL=you@example.com

# Where to store data and artifacts
DATA_DIR=./data

# If set to true the pipeline will prefer Addy and will not attempt SMTP at all.
ADDY_ONLY=YES
# Skip thumbnail generation (useful for OSS builds and smaller footprints)
SKIP_THUMBS=NO
# If set to true the run will abort if Addy is not configured. Useful when Addy-only delivery is mandatory.
REQUIRE_ADDY=TRUE
